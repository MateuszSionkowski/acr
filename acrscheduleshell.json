{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "acrName": {
      "type": "string",
      "defaultValue": "myACR",
      "metadata": {
        "description": "Name of the Azure Container Registry"
      }
    },
    "acrLocation": {
      "type": "string",
      "defaultValue": "eastus",
      "metadata": {
        "description": "Location of the Azure Container Registry"
      }
    },
    "taskName": {
      "type": "string",
      "defaultValue": "nginx-task",
      "metadata": {
        "description": "Name of the ACR Task"
      }
    },
    "taskContent": {
      "type": "string",
      "defaultValue": "version: v1.1.0\nsteps:\n  - cmd: docker pull nginx:latest\n  - cmd: docker tag nginx:latest [acrName].azurecr.io/nginx:latest\n  - push: [[acrName].azurecr.io/nginx:latest]",
      "metadata": {
        "description": "The plain text definition of the ACR Task"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.ContainerRegistry/registries",
      "apiVersion": "2021-09-01",
      "name": "[parameters('acrName')]",
      "location": "[parameters('acrLocation')]",
      "sku": {
        "name": "Basic"
      },
      "properties": {}
    },
    {
      "type": "Microsoft.ContainerRegistry/registries/tasks",
      "apiVersion": "2019-06-01-preview",
      "name": "[concat(parameters('acrName'), '/', parameters('taskName'))]",
      "location": "[parameters('acrLocation')]",
      "dependsOn": [
        "[resourceId('Microsoft.ContainerRegistry/registries', parameters('acrName'))]"
      ],
      "properties": {
        "agentConfiguration": {
          "cpu": 2
        },
        "isSystemTask": false,
        "platform": {
          "architecture": "amd64",
          "os": "linux"
        },
        "status": "Enabled",
        "step": {
          "encodedTaskContent": "[base64(parameters('taskContent'))]",
          "type": "EncodedTask",
          "values": []
        },
        "timeout": 3600,
        "trigger": {
          "baseImageTrigger": {
            "baseImageTriggerType": "Runtime",
            "name": "defaultBaseimageTriggerName",
            "status": "Enabled",
            "updateTriggerPayloadType": "Default"
          },
          "timerTriggers": [
            {
              "name": "t1",
              "schedule": "0 2 * * *",
              "status": "Enabled"
            }
          ]
        }
      }
    }
  ]
}
